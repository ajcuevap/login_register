{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nexport default {\n  name: 'RegisterPage',\n  data() {\n    return {\n      email: '',\n      password: '',\n      confirmPassword: ''\n    };\n  },\n  methods: {\n    async registerUser() {\n      if (this.password !== this.confirmPassword) {\n        alert('Las contraseñas no coinciden');\n        return;\n      }\n      try {\n        await axios.post('http://tu-backend/api/register', {\n          email: this.email,\n          password: this.password\n        });\n        alert('Usuario registrado con éxito');\n        this.$router.push('/login'); // Redirigir al login después del registro\n      } catch (error) {\n        alert('Error al registrar usuario');\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","email","password","confirmPassword","methods","registerUser","alert","post","$router","push","error"],"sources":["C:\\Users\\Agl\\Documents\\VueJS\\frontend\\login_register\\Frontend\\src\\components\\RegisterForm.vue"],"sourcesContent":["<template>\r\n  <div class=\"register-page\">\r\n    <div class=\"register-container\">\r\n      <div class=\"register-form\">\r\n        <h2 class=\"title\">Regístrate</h2>\r\n        <form @submit.prevent=\"registerUser\">\r\n          <div class=\"input-group\">\r\n            <input v-model=\"email\" type=\"email\" placeholder=\"Correo electrónico\" required />\r\n          </div>\r\n          <div class=\"input-group\">\r\n            <input v-model=\"password\" type=\"password\" placeholder=\"Contraseña\" required />\r\n          </div>\r\n          <div class=\"input-group\">\r\n            <input v-model=\"confirmPassword\" type=\"password\" placeholder=\"Confirmar Contraseña\" required />\r\n          </div>\r\n          <button type=\"submit\" class=\"submit-btn\">Registrar</button>\r\n        </form>\r\n        <p class=\"login-link\">\r\n          ¿Ya tienes cuenta? <router-link to=\"/login\">Inicia sesión aquí</router-link>\r\n        </p>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'RegisterPage',\r\n  data() {\r\n    return {\r\n      email: '',\r\n      password: '',\r\n      confirmPassword: ''\r\n    };\r\n  },\r\n  methods: {\r\n    async registerUser() {\r\n      if (this.password !== this.confirmPassword) {\r\n        alert('Las contraseñas no coinciden');\r\n        return;\r\n      }\r\n      try {\r\n        await axios.post('http://tu-backend/api/register', {\r\n          email: this.email,\r\n          password: this.password\r\n        });\r\n        alert('Usuario registrado con éxito');\r\n        this.$router.push('/login'); // Redirigir al login después del registro\r\n      } catch (error) {\r\n        alert('Error al registrar usuario');\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.register-page {\r\n  height: 100vh;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Fondo vibrante */\r\n}\r\n\r\n.register-container {\r\n  background: rgba(255, 255, 255, 0.9);\r\n  padding: 40px;\r\n  border-radius: 15px;\r\n  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);\r\n  width: 400px;\r\n  text-align: center;\r\n  animation: zoomIn 1s ease-out;\r\n}\r\n\r\n.title {\r\n  font-size: 30px;\r\n  font-weight: bold;\r\n  color: #333;\r\n  margin-bottom: 25px;\r\n  text-transform: uppercase;\r\n}\r\n\r\n.input-group {\r\n  margin-bottom: 20px;\r\n}\r\n\r\ninput {\r\n  width: 100%;\r\n  padding: 12px;\r\n  font-size: 16px;\r\n  border: 1px solid #ddd;\r\n  border-radius: 10px;\r\n  outline: none;\r\n  transition: all 0.3s ease;\r\n}\r\n\r\ninput:focus {\r\n  border-color: #ff7e5f;\r\n  box-shadow: 0 0 5px rgba(255, 126, 95, 0.5);\r\n}\r\n\r\n.submit-btn {\r\n  width: 100%;\r\n  padding: 12px;\r\n  background-color: #ff7e5f;\r\n  border: none;\r\n  color: white;\r\n  font-size: 16px;\r\n  border-radius: 10px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.submit-btn:hover {\r\n  background-color: #feb47b;\r\n}\r\n\r\n.login-link {\r\n  margin-top: 20px;\r\n  font-size: 14px;\r\n}\r\n\r\n.login-link a {\r\n  color: #ff7e5f;\r\n  text-decoration: none;\r\n  font-weight: 500;\r\n}\r\n\r\n.login-link a:hover {\r\n  text-decoration: underline;\r\n}\r\n\r\n@keyframes zoomIn {\r\n  0% {\r\n    opacity: 0;\r\n    transform: scale(0.5);\r\n  }\r\n  100% {\r\n    opacity: 1;\r\n    transform: scale(1);\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";AA0BA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE,EAAE;MACZC,eAAe,EAAE;IACnB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,YAAYA,CAAA,EAAG;MACnB,IAAI,IAAI,CAACH,QAAO,KAAM,IAAI,CAACC,eAAe,EAAE;QAC1CG,KAAK,CAAC,8BAA8B,CAAC;QACrC;MACF;MACA,IAAI;QACF,MAAMR,KAAK,CAACS,IAAI,CAAC,gCAAgC,EAAE;UACjDN,KAAK,EAAE,IAAI,CAACA,KAAK;UACjBC,QAAQ,EAAE,IAAI,CAACA;QACjB,CAAC,CAAC;QACFI,KAAK,CAAC,8BAA8B,CAAC;QACrC,IAAI,CAACE,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC,EAAE;MAC/B,EAAE,OAAOC,KAAK,EAAE;QACdJ,KAAK,CAAC,4BAA4B,CAAC;MACrC;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}